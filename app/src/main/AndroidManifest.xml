<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sauvage.training">

    <application

        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name=".TrainingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
       >
        <activity android:name=".CJActivity" android:parentActivityName=".CJActivity" android:windowSoftInputMode="adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CJActivity" />
        </activity>
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Test" android:parentActivityName=".CJActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CJActivity" />
        </activity>
    </application>

</manifest>